<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.reminders.create.CreateReminderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciado"
            android:layout_marginEnd="@dimen/espaciado"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/espaciado"
                android:layout_marginBottom="@dimen/espaciado"
                android:fontFamily="@string/fuente"
                android:text="@string/nombre_recordatorio"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/contenido" />

            <EditText
                android:id="@+id/reminder_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado"
                android:background="@drawable/edit_text_top_bottom"
                android:inputType="text"
                android:padding="@dimen/caja_texto" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/espaciado"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado"
                android:fontFamily="@string/fuente"
                android:text="@string/descripcion_recordatorio"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/contenido" />

            <EditText
                android:id="@+id/remainder_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado"
                android:background="@drawable/edit_text_top_bottom"
                android:inputType="textImeMultiLine|textMultiLine"
                android:padding="@dimen/caja_texto" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/espaciado"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado"
                android:fontFamily="@string/fuente"
                android:text="@string/fecha_recordatorio"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/contenido" />

            <EditText

                android:id="@+id/remainder_date_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado"
                android:background="@drawable/edit_text_top_bottom"
                android:focusable="false"
                android:inputType="date"
                android:longClickable="false"
                android:padding="@dimen/caja_texto" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/espaciado"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado"
                android:fontFamily="@string/fuente"
                android:text="@string/hora_recordatorio"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/contenido" />

            <EditText
                android:id="@+id/remainder_hour_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado"
                android:background="@drawable/edit_text_top_bottom"
                android:focusable="false"
                android:inputType="datetime"
                android:longClickable="false"
                android:padding="@dimen/caja_texto" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/espaciado"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_remainder_creation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/espaciado"
                    android:background="@drawable/button"
                    android:text="@string/cancelar" />

                <Button
                    android:id="@+id/confirm_remainder_creation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="@string/aceptar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>